<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% @posts.each do |post| %>
  <div class="card">
    <div class="handle"><%= post.user.email if post.user %></div>
    <%= image_tag post.picture, class: 'img-responsive' %>
    <p>
      <%= post.message %>
      <br />
      <%= post.recipe %>
    </p>
  </div>
  <% end %>
</div>